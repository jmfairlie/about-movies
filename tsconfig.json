{
  "compilerOptions": {
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": false,
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["./webpack.config.dev.js", "./node_modules/", "jest.config.*"]
}
